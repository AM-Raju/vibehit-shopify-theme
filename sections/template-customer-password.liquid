<div class="h-full flex item-center justify-center py-12 px-6 md:px-4 lg:px-8">
  {% comment %} Login Form  {% endcomment %}
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Reset Your Password</h1>
    </div>
    <div class="mt-8">
      {% form 'reset_customer_password' %}
        {% if form.errors %}
          <div class="block sm:inline">{{ form.errors | default_errors }}</div>
        {% endif %}


        <div class="my-2">
          <label class="sr-only" for="email_address">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border"
            placeholder="Password">
        </div>

        <div class="my-2">
          <label class="sr-only" for="password_confirmation">Password Confirmation</label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="password_confirmation"
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border"
            placeholder="Confirm Password">
        </div>

        <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-800">Reset Password
        </button>
      {% endform %}
    </div>

  </div>

</div>