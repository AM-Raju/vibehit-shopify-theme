<article class="py-20">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when "article_title" %}
        <div class="flex items-center justify-center text-center">
          <div class="max-w-7xl">
            <a
              href=" {{ blog.url }}"
              target="_blank"
              class="text-lg uppercase text-gray-500 hover:text-gray-900 font-bold">
              {{ blog.title }}</a>
            <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
          </div>
        </div>

      {% when "article_author" %}
        <div class="flex items-center justify-center text-center ">
          <div class="max-w-7xl ">
            {% if section.settings.enable_author %}
              <small class="font-semibold">Author: {{ article.author }}</small>
            {% endif %}
          </div>
        </div>
      {% when "article_published_date" %}
        <div class="flex items-center justify-center text-center ">
          <div class="max-w-7xl ">
            {% if section.settings.enable_published_date %}
              <time datetime="{{ article.published_at |  date: '%y-%m-%d' }}">
                <small class="font-semibold">Published {{ article.published_at | date: format: 'on_date' }}</small>
              </time>
            {% endif %}
          </div>
        </div>


      {% when "article_featured_image" %}
        <div class="max-w-7xl  bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-8 md:my-16">
          {% if article.image != blank %}
            <img
              class="w-full md:h-96 object-cover object-cente"
              src="{{ article.image | image_url}}"
              width="{{ article.image.width }}"
              height="{{ article.image.height }}"
              loading="lazy"
              alt=" {{ article.image.alt }}">

          {% else %}
            {% assign placeholder_image = 'lifestyle-2' %}
            {{ placeholder_image | placeholder_svg_tag: 'w-full h-80 md:h-96 object-cover object-center p-5' }}
          {% endif %}
        </div>


      {% when "article_content" %}
        <div class="max-w-4xl mx-auto px-5 md:px-20">{{ article.content }}</div>
    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}
  <div id="comment" class="my-8">
    {% if article.comments_count > 0 %}
      <div class="flex-1 items-center justify-center m-auto max-w-4xl px-4">
        <h1 class="text-lg mb-4 font-medium">See what people are saying</h1>

        {% paginate article.comments by 3 %}
          {% for comment in article.comments %}
            <div class="flex-1 border my-4 px-4 py-2 sm:px-6 sm:py-4 leading-relaxed">
              <span class="comment-author">{{ comment.author }}</span>
              <span class="text-xs text-gray-400">{{ comment.created_at | date: format: 'default' }}</span>
              <p class="text-sm">{{ comment.content }}</p>
            </div>
          {% endfor %}
          {% if paginate.pages > 1 %}
            <ul class="pagination flex flex-row ">
              {% if paginate.previous %}
                <li class="px-2 py-1 bg-gray-200 border border-gray-500">
                  <a href="{{ paginate.previous.url }}">Previous</a>
                </li>
              {% endif %}
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <li class="px-2 py-1 bg-gray-200 border border-gray-500">
                    <a href="{{ part.url }}">{{ part.title }}</a>
                  </li>
                {% else %}
                  <li class="active px-2 py-1 bg-gray-400 border border-gray-500">{{ part.title }}</li>
                {% endif %}
              {% endfor %}
              {% if paginate.next %}
                <li class="px-2 py-1 bg-gray-200 border border-gray-500">
                  <a href="{{ paginate.next.url }} ">Next</a>
                </li>
              {% endif %}
            </ul>
          {% endif %}
        {% endpaginate %}
      </div>
    {% else %}
      There are no comments.
    {% endif %}
  </div>

  <!-- Comment Form -->
  <div id="comment_form" class="mb-96">

    {% form 'new_comment'
      , article %}
      <div class="flex-1 mx-auto items-center justify-center max-w-4xl px-4">
        {% if form.errors %}
          <div class="border p-5">
            <div class="flex flex-row items-center w-full my-3">
              <div class="text-red-500">
                {% render 'icon-warn' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Oh no! Your comment wasn't posted.
              </div>
            </div>
            <ul class="px-4 mb-3 ml-7 list-decimal">
              {% for error in form.errors %}
                <li>
                  <span>{{ form.errors.messages[error] }}</span>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% elsif form.posted_successfully? %}
          <div class="border p-5">
            <div class="flex flex-row items-center w-full my-3">
              <div class="text-green-500">
                {% render 'icon-success' %}
              </div>
              <div class="text-sm font-medium ml-3">
                Your comment posted successfully</div>
            </div>
          </div>
        {% endif %}
        <div class=" md:flex mb-4 gap-4 space-y-4 md:space-y-0">
          <div class="md:w-1/2 ">
            <input
              type="text"
              name="comment[author]"
              id="comment_author"
              class="w-full text-gray-700 border py-3 px-4 outline-none"
              placeholder="John Doe"
              required>
          </div>
          <div class=" md:w-1/2 ">
            <input
              type="text"
              name="comment[email]"
              id="comment_email"
              class="w-full text-gray-700 border py-3 px-4 outline-none"
              placeholder="john@doe.com"
              required>
          </div>
        </div>

        <div class="">
          <textarea
            name="comment[body]"
            id="comment_text_area"
            class="w-full border p-3 outline-none min-h-40 resize-none"
            placeholder="Message"
            required></textarea>

        </div>
        <div class="flex items-center justify-end mt-3">

          <input
            type="submit"
            value="Post Comment"
            class="px-4 py-2 bg-green-500 hover:bg-green-600 font-semibold transition-all duration-300 cursor-pointer">

        </div>
      </div>
    {% endform %}
  </div>
{% endif %}


{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name"
      }, {
        "type": "checkbox",
        "id": "enable_published_date",
        "default": true,
        "label": "Display Published Date"
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_published_date",
        "name": "Published Date",
        "limit": 1
      },
      {
        "type": "article_featured_image",
        "name": "Featured Image",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}