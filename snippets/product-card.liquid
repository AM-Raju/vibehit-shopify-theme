<div class="border border-gray-300 p-6 w-[272px] ">

  {% if product.featured_image %}
    <img
      class="w-full h-72 object-cover object-center transition duration-500 hover:scale-105 transform"
      src="{{ product.featured_image |  image_url  }}"
      height="{{ product.featured_image.height }}"
      width="{{ product.featured_image.width }}"
      alt="{{ product.featured_image.alt }}">
  {% else %}
    {{ 'product-1' | placeholder_svg_tag: "w-full h-72 object-cover object-center" }}
  {% endif %}

  <div class="flex flex-col mt-4">
    <span class="text-sm text-gray-400 font-semibold">{{ product.vendor }}</span>
    <a href="{{ product.url }}" class="uppercase text-gray-700 font-semibold">{{ product.title }}</a>
    <p>{{ product.price | money }}</p>
  </div>
</div>